public class test2 {
	public static void main(String[] args) {

		JFrame mainFrame = new JFrame("作业提交");
		JPanel mainJPanel = new JPanel();
	    JButton commitButton = new JButton();
	    
	    JLabel titleLabel = new JLabel("问题标题");
	    JLabel questionLabel = new JLabel("问题内容");
	    
	    JTextArea textTitle=new JTextArea();	 
	    JTextArea textQuestion=new JTextArea();
	    
	    

	    titleLabel.setBounds(0,0,20,20);
	    mainJPanel.add(titleLabel);
	    
	    questionLabel.setBounds(100,200,50,50);
	    mainJPanel.add(questionLabel);
	    
	    mainJPanel.setBounds(0, 100, 400, 150);
	    mainFrame.add(mainJPanel);
	       
	    textTitle.setTabSize(4);
	    textTitle.setFont(new Font("标楷体", Font.BOLD, 16));
	    textTitle.setLineWrap(true);// 激活自动换行功能
	    textTitle.setWrapStyleWord(true);// 激活断行不断字功能
	    textTitle.setBackground(Color.pink);
	    
	    
	    textQuestion.setTabSize(4);
	    //textTitle.setFont(new Font("标楷体", Font.BOLD, 16));
